    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Img</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for van in vans %}
            <tr>
                <td>{{ van.id }}</td>
                <td>{{ van.name }}</td>
                <td>{{ van.description }}</td>
                <td>{{ van.img }}</td>
                <td>{{ van.phone }}</td>
                <td>
